        <Button x:Name="btnBackSand" Content="Back" HorizontalAlignment="Left" Margin="270,444,0,0" VerticalAlignment="Top" Width="80" Click="btnBackSand_Click" FontFamily="Comic Sans MS" Background="#33FFFFFF"/>
